{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "node",
		"declaration": false,
		"strict": true,
		"removeComments": true,
		"lib": ["dom", "es2017", "esnext.asynciterable"],
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"target": "es2017",
		"sourceMap": true,
		"allowJs": true,
		"importHelpers": true,
		"baseUrl": ".",
		"outDir": "./dist",
		"downlevelIteration": true
	},
	"include": ["2022/**/*"],
	"exclude": ["dist"]
}
